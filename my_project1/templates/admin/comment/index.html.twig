{% extends 'adminbase.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <h1>Comments</h1>
                <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Subject</th>
                        <th>Comment</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Hotel</th>
                        <th>Rate</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.id }}</td>
                            <td>{{ comment.subject }}</td>
                            <td>{{ comment.comment }}</td>
                            <td>{{ comment.status }}</td>
                            <td><a href="{{ path('admin_user_show', {'id': comment.id}) }}">{{ comment.name }} {{ comment.surname }}</a></td>
                            <td><a href="{{ path('admin_hotel_show', {'id': comment.id}) }}">{{ comment.title }}</a></td>
                            <td>{{ comment.rate }}</td>
                            <td>
                                <a  class="btn btn-block btn-info" href="{{ path('admin_comment_show', {'id': comment.id}) }}">show</a>
                            </td>
                            <td>
                                <a  class="btn btn-block btn-info" href="{{ path('admin_comment_edit', {'id': comment.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    {% endblock %}
