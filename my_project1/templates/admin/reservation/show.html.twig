{% extends 'adminbase.html.twig' %}

{% block title %}Reservation Home Page{% endblock %}

{% block body  %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4>Reservation Ä°ndex</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ reservation[0].id }}</td>
                            </tr>
                            <tr>
                                <th>Userid</th>
                                <td>
                                    <a  href="{{ path('admin_user_show', {'id': reservation[0].userid}) }}">
                                        {{ reservation[0].uname }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Hotel</th>
                                <td>
                                    <a  href="{{ path('admin_hotel_show', {'id': reservation[0].hotelid}) }}">
                                        {{ reservation[0].hname }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Room</th><td>{{ reservation[0].rname}}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ reservation[0].name }}</td>
                            </tr>
                            <tr>
                                <th>Surname</th>
                                <td>{{ reservation[0].surname }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ reservation[0].email }}</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>{{ reservation[0].phone }}</td>
                            </tr>
                            <tr>
                                <th>Checkin</th>
                                <td>{{ reservation[0].checkin ? reservation[0].checkin|date('d-m-Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Checkout</th>
                                <td>{{ reservation[0].checkout ? reservation[0].checkout|date('d-m-Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Days</th>
                                <td>{{ reservation[0].days }}</td>
                            </tr>
                            <tr>
                                <th>Total</th>
                                <td>{{ reservation[0].total }}</td>
                            </tr>
                            <tr>
                                <th>Ip</th>
                                <td>{{ reservation[0].ip }}</td>
                            </tr>
                            <tr>
                                <th>Message</th>
                                <td>{{ reservation[0].message }}</td>
                            </tr>
                            <tr>
                                <th>Note</th>
                                <td>{{ reservation[0].note }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ reservation[0].status }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('admin_reservation_edit', {'id': reservation[0].id}) }}">edit</a>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}

