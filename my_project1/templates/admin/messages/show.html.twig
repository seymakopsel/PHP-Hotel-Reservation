{% extends 'adminbase.html.twig' %}

{% block title %}Contact Messages{% endblock %}

{% block body  %}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <h1>Messages</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ message.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ message.name }}</td>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <td>{{ message.subject }}</td>
                    </tr>
                    <tr>
                        <th>Messages</th>
                        <td>{{ message.messages }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ message.status }}</td>
                    </tr>
                    <tr>
                        <th>Ip</th>
                        <td>{{ message.ip }}</td>
                    </tr>
                    <tr>
                        <th>Note</th>
                        <td>{{ message.note }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>


                <div class="col-md-2">
                    <a  class="btn btn-block btn-info" href="{{ path('admin_messages_edit', {'id': message.id}) }}">edit</a>
                </div><br>
                <div class="col-md-2">
                    {{ include('admin/messages/_delete_form.html.twig') }}
                </div>
                <a class="btn btn-default btn-flat" href="{{ path('admin_messages_index') }}">back to list</a>

            </div>
        </div>
    </div>


    {% endblock %}
