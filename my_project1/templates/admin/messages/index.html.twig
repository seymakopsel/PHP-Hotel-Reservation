{% extends 'adminbase.html.twig' %}

{% block title %}Message Home Page{% endblock %}

{% block body  %}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Subject</th>
                <th>Messages</th>
                <th>Status</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.name }}</td>
                <td>{{ message.subject }}</td>
                <td>{{ message.messages }}</td>
                <td>{{ message.status }}</td>
                <td>{{ message.note }}</td>
                <td>
                    <a class="btn btn-block btn-info" href="{{ path('admin_messages_show', {'id': message.id}) }}">show</a>
                </td>
                <td>
                    <a class="btn btn-block btn-info" href="{{ path('admin_messages_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            </div>
        </div>
    </div>
</div>


{% endblock %}
