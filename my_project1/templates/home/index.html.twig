{% extends 'homebase.html.twig' %}

{% block title %} {{ setting[0].title }} {% endblock %}
{% block keywords %} {{ setting[0].keywords }} {% endblock %}
{% block description %} {{ setting[0].description }} {% endblock %}

{% block slider %} {%  include ('home/slider.html.twig') %} {% endblock %}
{% block body %}
    <section id="maincontent">
        <div class="container">

            <div class="row">
                <div class="span12">
                    <div class="call-action">

                        <div class="text">
                            <h2>En Çok Aranan Bölgeler</h2>
                            <p>
                                Nereye gideceğine bir türlü karar veremiyorsan Odamax.com'daki popüler bölgelere göz at!</h2>
                            </p>
                        </div>
                        <div class="cta">
                            <a class="btn btn-large btn-theme" href="/">
                                <i class="icon-plane icon-white"></i> Get a quote </a>
                        </div>

                    </div>
                    <!-- end tagline -->
                </div>
            </div>

            <div class="row">
                {% for rs in hotels %}
                    <div class="span3 features e_pulse">
                        <a href="{{ path('hotel_show', {'id': rs.id }) }}">
                            <img src="{{ asset('uploads') }}/images/{{ rs.image }}" style="height: 150px;width: 400px">
                            <div class="box">
                                <div class="divcenter">
                                    <a href="#"><i class="icon-circled icon-48 icon-magic active icon"></i></a>
                                    <h4>{{ rs.title }}</h4>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="span12">
                    <h4 class="rheading">New Hotel<span></span></h4>
                    <div class="row">
                        <div class="span3">

                            <p class="hidden-phone">
                                Ön Ödemesiz Rezervasyon
                                Ödeme yapmadan yer ayırtabileceğin binlerce tesis ile rezervasyonunu şimdi yap, ücreti otele gidince öde!
                            </p>

                            <a href="/" class="btn btn-theme">Read More</a>
                        </div>

                        <div class="span9">
                            <div id="latest-work" class="carousel btleft">
                                <div class="carousel-wrapper">
                                    <ul class="da-thumbs">

                                        {% for rs in newhotels %}

                                            <li>
                                                <img src="{{ asset('uploads') }}/images/{{ rs.image }}" style="height: 150px;width: 400px">
                                                <article class="da-animate da-slideFromRight">
                                                    <a class="zoom" data-pretty="prettyPhoto" href="{{ asset('uploads') }}/images/{{ rs.image }}">
                                                        <i class="icon-zoom-in icon-rounded icon-48 active"></i>
                                                    </a>
                                                    <a href="{{ path('hotel_show', {'id': rs.id }) }}">
                                                        <i class="icon-link icon-rounded icon-48 active"></i>
                                                    </a>
                                                    <div class="hidden-tablet">
                                                        <p>{{ rs.title }}</p>
                                                    </div>
                                                </article>
                                            </li>
                                        {% endfor %}

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </section>

{% endblock %}
